<%- include('header'); -%>

<div class="page-wrapper">
    <div class="page-content">
        <nav class="page-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Bitácora</a></li>
                <li class="breadcrumb-item active" aria-current="page">ID <%= bitacora.id %></li>
            </ol>
        </nav>
        <div class="row">
            <div class="col-md-4 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Datos de la Bitácora </h6>

                        <div class="table-responsive">
                            <table class="table table-hover" style="">
                                <thead>
                                    <tr>
                                        <th>Campo</th>
                                        <th>Valor</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td style="font-weight: bold;">ID: </td>
                                        <td><%= bitacora.id %></td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold;">Resumen de Actividades: </td>
                                        <td ><%= bitacora.resumenActividades %></td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold;">Resumen Incidencias: </td>
                                        <td ><%= bitacora.resumenIncidencias %></td>
                                    </tr> 
                                    <tr>
                                        <td style="font-weight: bold;">Fecha de creación: </td>
                                        <td><%= bitacora.createdAt  %></td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold;">Guardia (ID): </td>
                                        <td><%= bitacora.user.id  %></td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold;">Guardia (Usuario): </td>
                                        <td><%= bitacora.user.username  %></td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold;">Guardia (Nombre): </td>
                                        <td><%= bitacora.user.name  %></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Fotografías</h6>
                        <a href="<%= host%>api/photo/<%= bitacora.photoId %>"><img style="width:auto;height: 400px;border-radius: 5px;" src="<%= host %>api/photo/<%= bitacora.photoId %>" /></a>
                    </div>
                </div>
            </div>

        </div>
        
        

    </div>

</div>

<%- include('footer'); -%>