<%- include('header'); -%>

<div class="page-wrapper">
    <div class="page-content">
        <nav class="page-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Accesos</a></li>
                <li class="breadcrumb-item active" aria-current="page">Empresa</li>
            </ol>
        </nav>
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Historial de Accesos</h6>

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Usuario</th>
                                        <th>Método</th>
                                        <th>IMEI</th>
                                        <th>Tipo</th>                                        
                                        <th>Fecha de Creación</th>
                                        <th>Ver</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <% if(accessLogs && accessLogs.length > 0)  {
                                        
                                        for(let accessLog of accessLogs) { %>
                                    <tr>
                                        <td><%= accessLog.id %></td>
                                        <td><%= accessLog.user.username %></td>
                                        <td><%= accessLog.accessMethod %></td>
                                        <td><%= accessLog.imei %></td>
                                        <td><%= accessLog.accessType %></td>                                                                               
                                        <td><%= accessLog.createdAt %></td>
                                        <td><a href="<%= host %>admin/accessLog/<%= accessLog.id %>" class="btn btn-primary mr-2">Ver Registro</a></td>
                                    </tr>

                                    <% } } else { %>
                                    <tr>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>-</td>
                                    </tr>

                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAY5scI2sYPDGoLn2INfct1gMw5gFLIHjs&callback=App.reports"></script>

<%- include('footer'); -%>