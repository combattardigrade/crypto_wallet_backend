<%- include('header'); -%>

<div class="page-wrapper">
    <div class="page-content">
        <nav class="page-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Bitácoras</a></li>
                <li class="breadcrumb-item active" aria-current="page">Empresa</li>
            </ol>
        </nav>
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Historial de Bitácoras</h6>
                       
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Usuario</th>
                                        <th>Resumen Actividades</th>
                                        <th>Resumen Incidencias</th>
                                        <th>Fecha de Creación</th>                                        
                                        <th>Ver Bitácora</th>                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                    <% if(bitacoras && bitacoras.length > 0)  {
                                        
                                        for(let bitacora of bitacoras) { %>
                                            <tr>
                                                <td><%= bitacora.id %></td>
                                                <td><%= bitacora.user.username %></td>
                                                <td style="white-space:pre-wrap; word-wrap:break-word"><%= bitacora.resumenActividades %></td>
                                                <td style="white-space:pre-wrap; word-wrap:break-word"><%= bitacora.resumenIncidencias %></td>
                                                <td><%= bitacora.createdAt %></td>                                                
                                                <td><a href="<%= host %>admin/bitacora/<%= bitacora.id %>" class="btn btn-primary mr-2">Ver Bitácora</button></td>
                                            </tr>
                                    
                                    <% } } else { %>
                                        <tr>
                                            <td>-</td>
                                            <td>-</td>
                                            <td>-</td>
                                            <td>-</td>
                                            <td>-</td>
                                            <td>-</td>                                            
                                        </tr>

                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<%- include('footer'); -%>